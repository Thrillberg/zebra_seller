<%= form_for @user do |f| %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label "Do you sell zebras?" %>
    <%= f.check_box :seller %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
